
@{
    ViewData["Title"] = "Result";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        determinar si una palabra o frase es palindromo.
    </div>
    <div class="card-body">
        <h5 class="card-title">Resultado</h5>
        @if (ViewBag.IsPalindrome)
        {
            <p class="card-text">La palabra @ViewBag.Word" es un palíndromo.</p>
        }
        else
        {
            <p class="card-text">La palabra @ViewBag.Word" no es un palíndromo.</p>
        }
    </div>
</div>








